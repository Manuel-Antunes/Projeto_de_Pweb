{{>nav}}
<title>Smart Plantation</title>
<link rel="stylesheet" href="/public/css/plantations.css">
<div class="container">
  <ul class="plantations-list">
    {{#if plantations}}
    <a id="add" href="create-plantation">+</a>
    {{/if}}
    {{#each plantations}}
    <li>
      <a href="plantation/{{name}}">
        {{#if logo.url}}
        <img src="{{logo.url}}" alt="{{name}}">
        {{else}}
        <img class="placeholded" src="/public/img/paisagem.jpg" alt="placeholder">
        {{/if}}
        <div class="label-name">
          <div class="name {{status}}">{{name}}</div>
          <span>ENTER</span>
        </div>
      </a>
    </li>
    {{/each}}
  </ul>
  {{#unless plantations}}
  <a id="add" href="create-plantation">+</a>
  {{/unless}}
</div>
<script src="/public/js/status.js" type="module"></script>
